{
    "name": "gitignore-ultimate",
    "displayName": "Gitignore Ultimate",
    "description": "Gitignore autocompletion",
    "publisher": "quentinguidee",
    "version": "0.1.8",
    "preview": true,
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "gitignore",
        "autocomplete",
        "intellisense",
        "path"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/quentinguidee/gitignore-ultimate"
    },
    "license": "MIT",
    "homepage": "https://github.com/quentinguidee/gitignore-ultimate",
    "icon": "icon.png",
    "activationEvents": [
        "onLanguage:ignore",
        "onCommand:gitignore-ultimate.create-gitignore",
        "onCommand:gitignore-ultimate.add-to-gitignore"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "commands": [
            {
                "title": "[Git] Create .gitignore",
                "command": "gitignore-ultimate.create-gitignore"
            },
            {
                "title": "[Git] Add to .gitignore",
                "command": "gitignore-ultimate.add-to-gitignore"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder",
                    "command": "gitignore-ultimate.create-gitignore",
                    "group": "gitignore-ultimate-files"
                },
                {
                    "command": "gitignore-ultimate.add-to-gitignore",
                    "group": "gitignore-ultimate-add-to-gitignore"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && yarn install && cd ../server && yarn install && cd .."
    },
    "devDependencies": {
        "@types/vscode": "^1.46.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }
}
