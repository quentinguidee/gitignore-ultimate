{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/clients/vscode-gitignore"
            ],
			"runtimeExecutable": "${execPath}",
            "autoAttachChildProcesses": true,
            "outFiles": [
                "${workspaceFolder}/client/out/**/*.js"
            ],
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceFolder}/clients/vscode-gitignore",
                "--extensionTestsPath=${workspaceFolder}/clients/vscode-gitignore/out/tests/suite/index",
                "${workspaceFolder}/clients/vscode-gitignore/src/tests/suite/workspace/test.code-workspace"
            ],
			"runtimeExecutable": "${execPath}",
            "outFiles": [
                "${workspaceFolder}/clients/vscode-gitignore/out/tests/**/*.js"
            ],
        }
    ]
}
