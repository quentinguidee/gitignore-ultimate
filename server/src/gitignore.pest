file    = { SOI ~ (line)* ~ EOI }
line    = { " "* ~ (comment | path)? ~ " "* ~ NEWLINE }
comment = { "#" ~ (!NEWLINE ~ ANY)* }
path    = { negate? ~ separator? ~ segment ~ (separator ~ segment)* ~ separator? }
    segment   = { "**" | (!(separator | " " | NEWLINE) ~ ("\\ " | ANY))+ }
    separator = { "/" }
    negate    = { "!" }
